#!/usr/bin/env zsh
gmic "$@" 'j={$!-1}' \
  -repeat '$!' \
    'f={$j,n}' \
    -split_tiles'[$j]' -100,1 \
    -repeat '{($!-$j)/2-1}' \
      -move'[{$>*2+$j+1}]' '{$>*2+$j}' \
    -done \
    -append'[$j-{$!-1}]' x \
    -split_tiles'[$j]' 1,-100 \
    -repeat '{($!-$j)/2-1}' \
      -move'[{$>*2+$j+1}]' '{$>*2+$j}' \
    -done \
    -append'[$j-{$!-1}]' y \
    -o'[$j]' '$f' \
    -rm'[$j]' \
    'j-=1' \
  -done
