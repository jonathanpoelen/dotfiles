#!/bin/zsh

# Scale images to my eReader (1072Ã—1448)

width=1072
height=1448
by=120

files=()
for f in $@ ; {
  [[ $f[1] == / ]] && p= || p=./
  [[ -d $f ]] && files+=($p$f/**/*(^/)) || files+=($p$f)
}

for ((i=1; i <= $#files; i+=$by)) {
  gmic $files[$i,$i+$by-1] \
  -adjust_colors'[0-100%]' -5,10 \
  dk=0 \
  -repeat '$!' \
    -if '{w#$dk>h#$dk}' \
      -split_tiles'[$dk]' 2,1 \
      -name'[{$dk+1}]' '{$dk,f}/{$dk,b}_a.{$dk,x}' \
      dk+=1 \
    -fi \
    dk+=1 \
  -done \
  -autocrop'[0-100%]' \
  -repeat '$dk' \
    -if '{w#$>>'$width'||h#$>>'$height'}' \
      'ratio=max({w#$>/'$width'},{h#$>/'$height'})' \
      -resize_mn'[$>]' '{w#$>/$ratio},{h#$>/$ratio},1,1' \
    -fi \
    -o'[$>]' 'jpg:{$>,n},40' \
  -done -q
}
